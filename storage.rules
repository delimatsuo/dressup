rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all users for garment images
    match /garments/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Allow authenticated users to upload their photos
    match /uploads/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.resource.size < 10 * 1024 * 1024 && // Max 10MB
                     request.resource.contentType.matches('image/.*');
    }
    
    // Allow read access to processed results
    match /results/{sessionId}/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions can write
    }
  }
}