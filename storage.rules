rules_version = '2';

// DressUp AI - Secure Storage Rules for Production
service firebase.storage {
  match /b/{bucket}/o {
    // Public read for generated images (results) only
    // These are the AI-generated outfit images users want to share
    match /results/{sessionId}/{allPaths=**} {
      allow read: if true;  // Public read for sharing generated images
      allow write: if false; // Only Cloud Functions can write results
    }
    
    // User upload area with security restrictions
    // Temporary storage for user-uploaded photos
    match /uploads/{sessionId}/{allPaths=**} {
      allow read: if true;  // Need to read for processing
      allow create: if request.resource.size < 10 * 1024 * 1024  // 10MB max file size
                    && request.resource.contentType.matches('image/.*'); // Images only
      allow update, delete: if false; // No modifications after upload
    }
    
    // Garment images (if stored in Storage instead of URLs)
    match /garments/{garmentId}/{allPaths=**} {
      allow read: if true;  // Public read for garment catalog
      allow write: if false; // Only admin/functions can manage
    }
    
    // Default deny rule - Security backstop
    // Anything not explicitly allowed above is denied
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}